extends layout
block content 
    h2 Account
    section
        h3 uitloggen 
        form(action="/logout" method="POST")
                
        button(type="button" id="logoutButton") uitloggen
            
    section
        h3 Wijzig wachtwoord  
        form(action="/account/wijzigWachtwoord", method="post" id = "veranderwachtwoordform" enctype="application/x-www-form-urlencoded") 
        p 
            label(for="password") oud Wachtwoord:
            div
                input#password(type="password" name = "oldpassword" required placeholder="Voer uw wachtwoord in")
        p 
            label(for="password") nieuw Wachtwoord:
            div
                input#password(type="password" name = "newpassword" required  placeholder="Voer uw wachtwoord in")
        p
            button(type="submit") verander wachtwoord   

        
        
        h4 werkt niet 
        form(action="/wijzigWachtwoord" method="POST")
            label(for="oudWachtwoord") Oud wachtwoord
            p
            input(
            type="password"
            id="oudWachtwoord"
            name="oudWachtwoord"
            required
           
            title="Het wachtwoord moet minstens 8 tekens lang zijn."
            )
            p 
            label(for="nieuwWachtwoord") Nieuw wachtwoord
            p
            input(
                type="password"
                id="nieuwWachtwoord"
                name="nieuwWachtwoord"
                required
                
                title="Het wachtwoord moet minstens 8 tekens lang zijn, en minstens één cijfer, één hoofdletter, één kleine letter, en één speciaal teken bevatten."
                )
            p     
            button(type="button" id="changePasswordButton") Wijzig
                
    script(src="/javascripts/accountfe.js")
